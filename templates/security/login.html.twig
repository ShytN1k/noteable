{% extends 'base.html.twig' %}

{% block title %}Login to NotEable{% endblock %}

{% block sidebar %}
{% endblock %}

{% block body %}
    <div class="row my-5">
        <div class="col-md-4 offset-md-4 col-lg-4 offset-lg-4">
            <div class="login-form">
                <span class="login-title">
                    Login
                </span>
                {% if error %}
                    <div class="login-error">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label class="sr-only" for="username">Username/Email</label>
                        <input type="text" id="username" name="_username"
                               value="{{ last_username }}"
                               placeholder="username/email"
                        />
                    </div>

                    <div class="form-group">
                        <label class="sr-only" for="password">Password</label>
                        <input type="password" id="password" name="_password" placeholder="password"/>
                    </div>

                    <button type="submit" class="btn btn-brown">Login</button>
                    <a href="#" class="btn btn-outline-brown">Recover password</a>
                    <a href="#" class="btn btn-outline-brown">Registration</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
